<p style="color: green"><%= notice %></p>

 <div class="service-card" style="margin: 0 auto; margin-top: 40px; margin-bottom: 40px;">
    <div class="row">
<div style="text-align: right; float:right;">
<i class="bi bi-basket"></i>
</div>
<h1>Hello!</h1>
<h2> Order services to your room! </h2>
<div class="cards-container">
<div class="login-card2">
  <h3>Room cleaning</h3>
  <h5>Schedule when you want us to clean your room</h5>
  <hr>
  <br>
  <div class="cleaning-schedule">
    <%= check_box_tag(:cleaning, '7am') %>
    <%= label_tag(:cleaning_7am, '7:00am', style: 'font-size: 20px;') %>
  </div>

  <div class="cleaning-schedule">
    <%= check_box_tag(:cleaning, '11am') %>
    <%= label_tag(:cleaning_11am, '11:00am', style: 'font-size: 20px;') %>
  </div>

  <div class="cleaning-schedule">
    <%= check_box_tag(:cleaning, '3pm') %>
    <%= label_tag(:cleaning_3pm, '3:00pm', style: 'font-size: 20px;') %>
  </div>

 <div class="image-container">
  <%= image_tag("roomservice.png", alt: "roomservice", width: 200, height: 200, class: "roomservice-image") %>
</div>
</div>
<div class="login-card2">
  <h3>Food </h3>
  <h5>Check out today's food selection!</h5>
  <hr>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
  <% @food.each do |f| %>
    <div class="item
    <% if (f.id == 1) %>
      <%= "active" %>
    <% end %>">
      <div class="card">
      <% if (f.id == 1) %>
        <%= image_tag("breakfast.png", alt: "breakfast", width:"300", height:"200") %>
      <% end %>
      <% if (f.id == 2) %>
        <%= image_tag("lunch.png", alt: "lunch", width:"300", height:"200") %>
      <% end %>
      <% if (f.id == 3) %>
        <%= image_tag("vegantaco.jpeg", alt: "taco", width:"300", height:"200") %>
      <% end %>
        <div class="card-body">
          <h4 class="card-title"> <%= f.name%></h4>
          <p class="card-text"> <%= f.price %>€</p>
          <div class="order" style ="text-align: center;">
          <%= check_box_tag(:order, 'Order') %>
          <%= label_tag(:order_toast, 'Order', style: 'font-size: 20px;') %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>

<div class="login-card2" style="width:375px">
<h3>Activities </h3>
  <h5>Sign up for activities!</h5>
  <div class="activity">
    <%= check_box_tag(:activity, 'Yoga') %>
    <%= label_tag(:activity_yoga, 'Yoga class', style: 'font-size: 20px;') %>
      <label> 30,00€ </label>
  </div>

  <div class="activity">
    <%= check_box_tag(:activity, 'Massage') %>
    <%= label_tag(:activity_massage, 'Massage', style: 'font-size: 20px;') %>
    <label> 20,00€ </label>
  </div>

  <div class="activity">
    <%= check_box_tag(:activity, 'Fitnes') %>
    <%= label_tag(:activity_gym, 'Fitnes', style: 'font-size: 20px;') %>
    <label> 20,00€ </label>
  </div>
  <div class="image-container">
  <%= image_tag("yoga.png", alt: "roomservice", width: 300, height: 210, class: "roomservice-image") %>
</div>

</div>

<div class="login-card2">
<h3>Drinks </h3>
  <h5>Order something to drink!</h5>
  <hr>
  <div id="myCarousel2" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
  <% @drink.each do |d| %>
    <div class="item
    <% if (d.id == 1) %>
      <%= "active" %>
    <% end %>">
      <div class="card">
      <% if (d.id == 1) %>
        <%= image_tag("coffee.jpeg", alt: "coffee", width:"300", height:"200") %>
      <% end %>
      <% if (d.id == 2) %>
        <%= image_tag("blackcoffee.jpeg", alt: "blackcoffee", width:"300", height:"200") %>
      <% end %>
      <% if (d.id == 3) %>
        <%= image_tag("juice.jpeg", alt: "juice", width:"300", height:"200") %>
      <% end %>
        <div class="card-body">
          <h4 class="card-title"><%= d.name%></h4>
          <p class="card-text"><%= d.price%>€</p>
          <div class="order" style ="text-align: center;">
          <%= check_box_tag(:order, 'Order') %>
          <%= label_tag(:order_toast, 'Order', style: 'font-size: 20px;') %>
          </div>
        </div>
      </div>
    </div>
<% end%>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel2" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel2" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>

<div id="services">
  <% @services.each do |service| %>
    <%= render service %>
    <p>
      <%= link_to "Show this service", service %>
    </p>
  <% end %>
</div>
</div>
</div>
